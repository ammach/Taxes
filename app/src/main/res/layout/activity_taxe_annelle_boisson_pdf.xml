            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="400dp"
            android:text="A COMPTER PAR"
            android:textColor="@android:color/black"
            android:textSize="25dp" />
    </LinearLayout>



    <LinearLayout
